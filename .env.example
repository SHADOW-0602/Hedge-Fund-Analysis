# Market Data API Keys (all optional - YFinance is used as fallback)
FINNHUB_API_KEY=your_finnhub_api_key_here
POLYGON_API_KEY=your_polygon_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
TWELVE_DATA_API_KEY=your_twelve_data_key_here

# News API (for market news and sentiment)
NEWSAPI_KEY=your_news_api_key_here

# Plaid Configuration (for transaction data)
PLAID_CLIENT_ID=key_here
PLAID_SECRET=key_here
PLAID_ENVIRONMENT=sandbox

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
# Optional: Direct PostgreSQL connection (only needed for raw SQL)
# DATABASE_URL=postgresql://postgres:[password]@db.your-project.supabase.co:5432/postgres

# Upstash Redis Configuration
REDIS_URL=rediss://default:password@your-redis.upstash.io:6379

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
FLASK_SECRET_KEY=your_flask_secret_key_here

# Application Settings
FLASK_ENV=production
DEBUG=False
LOG_LEVEL=INFO

# Email Configuration (Optional - leave blank to disable email notifications)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@company.com
# SMTP_PASSWORD=your_email_password

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
MAX_CONCURRENT_REQUESTS=10